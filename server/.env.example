PORT=3000
SCRAPER_SECRET="your_very_secret_string_here"
SEQUELIZE_LOGGING=false
ANALYTICS_STORAGE_ITEMS=200
ANALYTICS_STORAGE_TIME_MINUTES=10
ANALYTICS_HASH_SALT="your_very_secret_salt_here"

# Optional: CineStar API base URL
CINESTAR_API_URL="https://shop.cinestarcinemas.hr/api"

# Optional: on-demand seating Puppeteer tuning
PUPPETEER_MAX_CONCURRENCY=2
PUPPETEER_IDLE_TTL_MS=1200000
PUPPETEER_NAV_TIMEOUT_MS=12000

# Optional: override browser details (usually leave empty when using the Puppeteer base image)
PUPPETEER_EXECUTABLE_PATH=
PUPPETEER_USER_AGENT=

# Optional: seating cache tuning
SEATING_CACHE_TTL_MS=60000
SEATING_CACHE_MAX_ENTRIES=50

# Optional: DB schema control
# Increment DB_SCHEMA_VERSION when you make incompatible model changes to force a one-time schema reset
DB_SCHEMA_VERSION=1
# If set to true, the server will forcibly reset the DB schema on startup and destroy data
FORCE_DB_RESET=false